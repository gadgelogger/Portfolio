---
import ProfileImage from '../components/ProfileImage.astro';
import ProfileDescription from '../components/ProfileDescription.astro';
---

<main class="main">
  <h2 class="profile-title">Profile</h2>
  <div class="profile-container">
    <div class="profile-card">
      <ProfileImage />
      <ProfileDescription />
    </div>
  </div>
  <slot />
</main>

<style>
  .main {
    font-size: 28px;
    font-weight: bold;
    color: #000000;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 50vh; /* ビューポートの高さに合わせる */
  }
  .profile-title {
    text-align: center;
    margin-bottom: 20px;
  }
  .profile-container {
    display: flex;
    align-items: center;
  }
  .profile-card {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    padding: 20px;
    display: flex;
    align-items: center;
  }
  .top-image {
    width: 100%;
    height: auto;
  }

  @media (max-width: 1068px) {
    .main {
      font-size: 20px;
      height: auto;
      padding: 20px;
    }
    .profile-container {
      flex-direction: column;
      text-align: center;
    }
    .profile-card {
      flex-direction: column;
    }
    .profile-description {
      padding-left: 0;
    }
  }
</style>